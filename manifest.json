{
  "manifest_version": 3,
  "name": "Simple-Timer-Alarm",
  "version": "1.3.1",
  "description": "複数のタイマーを同時に実行できる拡張機能です。",
  "icons": {
    "128": "images/icon.png"
  },
  "permissions": [
    "sidePanel",
    "storage",
    "alarms",
    "offscreen"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "サイドパネルを開く"
  },
  "web_accessible_resources": [
    {
      "resources": [ "sounds/sound.mp3", "images/play.png", "images/pause.png", "popup.html" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
